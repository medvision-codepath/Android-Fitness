<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimaryVariant">@color/fit_blue</item>
        <item name="colorOnPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorPrimary">@color/fit_blue</item>
        <item name="colorSecondary">@color/fit_dark_blue</item>
        <item name="colorOnBackground">@color/fit_white</item>
        <item name="colorAccent">@color/fit_light_green</item>
        <item name="colorBackgroundFloating">@color/fit_light_grey</item>

    </style>
</resources>